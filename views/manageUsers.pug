extends base

mixin navItem(link,text,icon, active) 
  li(class= `${active ? 'side-nav--active' : ''}`)
    a(href=`/${link}`)
      svg
        use(xlink:href=`/img/icons.svg#icon-${icon}`)
      | #{text}



block content 
    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    +navItem('me','Settings','settings')
                    +navItem('#','My bookings','briefcase')
                    +navItem('#','My reviews','star')
                    +navItem('#','Billing','credit-card')
                - if(user.role==='admin')
                    .admin-nav
                        h5.admin-nav__heading Admin
                        ul.side-nav
                            +navItem('#','Manage tours','map')
                            +navItem('manageAccounts','Manage users','users',true)
                            +navItem('#','Manage reviews','star')
                            +navItem('#','Manage bookings','briefcase')
            .user-view__content
                .user-view__form-container
                    h2.heading-secondary--manage.ma-bt-md Manage Users Account
                    .form__group
                        label.heading-secondary.ma-bt-md(for='name') Select User: 
                        select#select
                            each user in users
                                option(value=`${user.name}`)= `${user.name}`
                                        
                    .line &nbsp;
                    .user-view__form-containe
                        h2.heading-secondary.ma-bt-md Disable Account
                            .form__group.ma-bt-lg-dis
                            
                            .form__group.left
                                button.btn-delete.btn--small.btn--red.btn--delete-accountt Disable Account
                                